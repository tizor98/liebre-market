<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include("../partials/head", {title: 'List'}) %>

<body>
   
   <!-- Header -->
   <%- include("../partials/header") %>
   <main>
   <section>
      <% products.forEach(product => { %>
         <article>
            <strong><p class="description"><%= product.name %></p></strong>

            <div class="product-list-image">
               <img src="/img/products/<%= product.Imgs[0].img %>" alt="<%= product.name %>">
            </div>

            <div class="details-info">
               <span  class="icon-product">
                  <i class="fas fa-shipping-fast"></i>
               </span>

               <div class="align-prices">
                  <p class="prices">$<%= product.price %></p>
                  <p class="discound"><%= product.discount %>% off</p>
               </div>
            </div>
         </article>
      <% }) %>
   </section>
   </main>
   
   <!-- Footer -->
   <%- include("../partials/footer")%>

</body>
</html>