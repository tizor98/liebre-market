<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include("../partials/head", {title: 'Products admin'}) %>
<link rel="stylesheet" href="/css/user-admin-products.css">

<body>
   
   <!-- Header -->
   <%- include("../partials/header") %>

   <form class="admin-products-form" action="/products/admin/create" method="get">
      <button class="generic-button" type="submit">Add new product</button>
   </form>

   <main class="admin-products-main">

      <% if(products) { %>
         <% products.forEach(product => { %>
            <article class="admin-products-section">
               
               <div class="admin-products-container">
                  <div class="admin-products-img">
                     <img src="/img/products/<%= product.Imgs[0].img %>" alt="<%= product.name %>">
                  </div>

                  <p class="admin-products-name"><strong><%= product.name %></strong></p>
               </div>

               <div class="admin-products-buttons">
                  <form action="/products/<%= product.id %>" method="get">
                     <button class="admin-products-button-view" type="submit">Ver</button>
                  </form>
                  
                  <form action="/products/admin/edit/<%= product.id %>" method="get">
                     <button class="admin-products-button-update" type="submit">Editar</button>
                  </form>
   
                  <form action="/products/admin/edit/<%= product.id %>?_method=DELETE" method="post">
                     <button class="admin-products-button-delete" type="submit">Eliminar</button>
                  </form>
               </div>

            </article>
         <% }) %>  
      <% } %>

   </main>
   
   <!-- Footer -->
   <%- include("../partials/footer")%>

</body>
</html>